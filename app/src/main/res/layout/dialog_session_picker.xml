<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:minWidth="520dp"
    android:background="?attr/colorSurface">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/session_picker_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- Active Sessions Section -->
    <TextView
        android:id="@+id/sessionsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_sessions"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="12dp" />

    <!-- Table Header -->
    <LinearLayout
        android:id="@+id/tableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:visibility="gone">

        <!-- Status column -->
        <View
            android:layout_width="28dp"
            android:layout_height="1dp" />

        <!-- Name column -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="SESSION"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Summary column -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="ACTIVITY"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Git column -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="BRANCH"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Divider under header -->
    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_sessions"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sessionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="true" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginBottom="20dp" />

    <!-- New Session Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_named_session"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/sessionNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/session_name_hint"
            android:inputType="text"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:imeOptions="actionGo" />

        <Button
            android:id="@+id/btnCreate"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/create" />

    </LinearLayout>

    <!-- Bottom buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

    </LinearLayout>

</LinearLayout>
