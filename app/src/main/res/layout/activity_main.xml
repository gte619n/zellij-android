<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Tab Strip -->
    <LinearLayout
        android:id="@+id/tabBarContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorSurfaceContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabStrip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <ImageButton
            android:id="@+id/btnAddTab"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_add_tab"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/tab_new"
            android:scaleType="centerInside"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/btnToggleImmersive"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_fullscreen"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_immersive"
            android:scaleType="centerInside"
            android:padding="6dp" />
    </LinearLayout>

    <!-- WebView Container -->
    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Error Banner (hidden by default) -->
        <LinearLayout
            android:id="@+id/errorBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/error_banner_bg"
            android:padding="8dp"
            android:elevation="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/errorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/connection_lost"
                android:textColor="@color/error_banner_text"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnRetry"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry_now"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
